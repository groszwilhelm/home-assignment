{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@custom/*": [
        "src/shared/models/*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
    ],
  },
  "include": [
    "./**/*"
  ]
}